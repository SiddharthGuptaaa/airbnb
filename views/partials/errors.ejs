<% if (errors.length > 0) { %>
          <div class="bg-red-100" role="alert">
            <strong class="font-bold">Error!</strong>
            <span class="block sm:inline">
              <% errors.forEach(error => { %>
                <li><%= error %></li>
              <% }) %> 
            </span>
          </div>
          <% } %>