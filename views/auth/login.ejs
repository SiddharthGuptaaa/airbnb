<%- include('../partials/head') %>
  </head>
  <body class="bg-gray-100"></body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-16 p-8 max-w-md">
      <div class="bg-white rounded-xl shadow-lg p-8 border border-gray-100">
        <h1 class="text-3xl font-bold mb-8 text-center text-gray-800">
          Welcome Back
          <p class="text-sm font-normal text-gray-600 mt-2">Please enter your details</p>
        </h1>
        
        <form action="/login" method="POST" class="space-y-6">
          <%- include('../partials/errors.ejs') %>
          
          <div class="space-y-2">
            <input
              type="email"
              name="email"
              placeholder="Enter your email"
              value="<%= oldInput.email ? oldInput.email : '' %>"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200"
              required
            />
            
            <input
              type="password"
              name="password"
              placeholder="Enter your Password"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200"
              required
            />
          </div>

          <button 
            type="submit"
            class="w-full bg-red-500 text-white py-3 rounded-lg hover:bg-red-600 transform hover:scale-[1.02] transition-all duration-200 font-medium"
          >
            Sign In
          </button>
        </form>
        
        <p class="text-center mt-6 text-gray-600">
          New to Airbnb? 
          <a href="/signup" class="text-red-500 hover:text-red-600 font-medium">Create an account</a>
        </p>
      </div>
    </main>
  </body>
</html>